<UserControl x:Class="BookKeeping.TodoItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookKeeping"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White" Height="30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="TimeTb" Grid.Column="0" VerticalContentAlignment="Center" HorizontalAlignment="Center" BorderThickness="0" FontSize="20" Foreground="LightGray">Time</TextBox>
        <TextBox x:Name="ItemnameTb" Grid.Column="1" VerticalContentAlignment="Center" BorderThickness="0" FontSize="20" Foreground="Gray">New</TextBox>
        <TextBox x:Name="PayTb" Grid.Column="2" VerticalContentAlignment="Center" HorizontalAlignment="Right" BorderThickness="0" FontSize="25" Foreground="#FF3399FF">Pay</TextBox>
    </Grid>
</UserControl>
